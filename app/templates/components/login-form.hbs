<form {{action "login" on="submit"}}>
  <label for="email">
    Email
  </label>
  {{input value=email name="email" class="test-email"}}
  <label for="password">
    Password
  </label>
  {{input type="password" value=password name="password" class="test-password"}}
  {{input type="submit" value="Log in" class="button test-log-in"}}
</form>
{{#if addon.isDeprecated}}
  <span class="score deprecated">
    {{yield "x"}}
  </span>
{{else if addon.isWip}}
  <span class="score wip">
    {{yield "WIP"}}
  </span>
{{else}}
  {{#if hasBeenReviewedAndScored}}
    <span class="score" data-score={{to-fixed addon.score 0}}>
      {{yield addon.score}}
    </span>
  {{else}}
    <span class="score">
      {{yield "?"}}
    </span>
  {{/if}}
{{/if}}

<form {{action "addCategory" on="submit"}} class="with-default-styling">
  <fieldset>
    <label for="name">
      Name:
    </label>
    <Input @type="text" @id="name" @value={{newCategoryName}} />
    <br>
    <label for="description">
      Description:
    </label>
    <Input @type="text" @id="description" @value={{newCategoryDescription}} />
    <br>
    <label for="position">
      Position:
    </label>
    <CategoryPositionDropdown @name="position" @position={{newCategoryPosition}} @updatePosition={{action (mut newCategoryPosition)}} @categories={{sortedTopLevelCategories}} />
    <br>
    <input type="submit" class="button" value="Add category">
  </fieldset>
</form>

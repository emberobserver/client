<div class="admin-categories-edit with-default-styling">
  <form {{action "updateCategory" on="submit"}}>
    <fieldset>
      <label for="name">
        Name:
      </label>
      <Input @type="text" @id="name" @value={{categoryName}} />
      <br>
      <label for="description">
        Description:
      </label>
      <Input @type="text" @id="description" @value={{categoryDescription}} />
      {{#if hasSiblingCategories}}
        <br>
        <label for="position">
          Position:
        </label>
        <CategoryPositionDropdown @name="position" @position={{categoryPosition}} @updatePosition={{action (mut categoryPosition)}} @categories={{sortedSiblingCategories}} />
      {{else}}
        <Input @type="hidden" @id="position" @value={{categoryPosition}} />
      {{/if}}
      <br>
      <label for="parent">
        Parent category:
      </label>
      <XSelect @name="parent" @value={{categoryParent}}>
        <XOption>(none)</XOption>
        {{#each alphabeticTopLevelCategories as |category|}}
          <XOption @value={{category.id}}>{{category.name}}</XOption>
        {{/each}}
      </XSelect>
      <br>
      <input type="submit" value="Save category">
    </fieldset>
  </form>

  {{#if isTopLevelCategory}}
    <h4>Subcategories</h4>
    {{#if subcategories}}
      <ol>
        {{#each subcategories as |category|}}
          <li><LinkTo @route="admin.categories.edit" @model={{category.slug}}>{{category.name}}</LinkTo></li>
        {{/each}}
      </ol>
    {{else}}
      This category has no subcategories.
    {{/if}}

    <form {{action "addSubcategory" on="submit"}}>
      <fieldset>
        <label for="subcategoryName">
          Name:
        </label>
        <Input @type="text" @id="subcategoryName" @value={{newCategoryName}} />
        <br>
        <label for="subcategoryDescription">
          Description:
        </label>
        <Input @type="text" @id="subcategoryDescription" @value={{newCategoryDescription}} />
        <br>
        <label for="subcategoryPosition">
          Position:
        </label>
        <CategoryPositionDropdown @name="subcategoryPosition" @position={{newCategoryPosition}} @categories={{subcategories}} />
        <br>
        <input type="submit" value="Add category">
      </fieldset>
    </form>
  {{/if}}
</div>

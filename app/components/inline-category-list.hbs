<CommaSeparatedList @list={{this.categoriesSortedByAddonCount}} as |value separator|>
  <LinkTo @route="categories.show" @model={{value.slug}}>
    {{#if this.showWithoutParent}}
      {{value.name}}
    {{else}}
      {{#if value.parent}}
        {{value.parent.name}} >
      {{/if}}
      {{value.name}}
    {{~/if~}}
    {{#if this.showAddonCount}}
      ({{value.totalAddonCount}})
    {{~/if~}}
    {{separator}}
  </LinkTo>
</CommaSeparatedList>
